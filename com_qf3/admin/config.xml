<?xml version="1.0" encoding="utf-8"?>
<config>
<fields addfieldpath="/administrator/components/com_qf3/models/fields">
	<fieldset
		name="show"
		label="QuickForm 3"
		description="">

		<field type="version" />

		<field
			name="filesmod" type="radio" default="0" label="QF_UPLOAD_FILES" description="QF_UPLOAD_FILES_DESCR">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="shopmod" type="radio" default="0" label="QF_SHOPMOD">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>

		<field
			name="display" type="radio" default="0" label="QF_REFERENCE_TO_THE_AUTHOR">
			<option value="0">QF_SIMPLE</option>
			<option value="1">QF_INVISIBLE</option>
			<option value="2">QF_REMOVE</option>
		</field>

		<field type="donation" />

		<field name="cod" type="text" label="QF_ENTER_THE_CODE"/>
	</fieldset>

	<fieldset
		name="services"
		label="QF_SERVICES_LABEL"
		>
		<field type="recaptcha" />

		<field
			name="recaptcha_theme" type="list" default="0" label="QF_THEME">
			<option value="0">Light</option>
			<option value="1">dark</option>
		</field>

		<field
			name="recaptcha_show" type="list" default="0" label="QF_SHOW">
			<option value="0">QF_ALL</option>
			<option value="1">QF_GUEST</option>
		</field>

		<field
			name="sitekey"
			type="text"
			label="QF_SITEKEY" />

		<field
			name="serverkey"
			type="text"
			label="QF_SERVERKEY" />
	</fieldset>

	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>

		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules"
			validate="rules"
			component="com_qf3"
			section="component" />
	</fieldset>
	</fields>
</config>
